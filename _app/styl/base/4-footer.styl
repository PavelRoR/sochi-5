footer
	padding 50px 0
	font-family: M
	font-size: 14px
	font-weight: 300
	background-color: #228C5F
	background-image: url(../img/backs/footer.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	color #fff
	position relative
	box-shadow: 0 -3px 51px 8px rgba(#000, .25)
	&:before
	&:after
		content: ''
		display block
		position absolute
		width 100%
		height: 2px
		border-top: 2px dashed #fff
		opacity .26
		left 0
		right 0
		top 10px
	&:after
		top auto
		bottom 10px
	@media screen and (max-width 991px)
		padding 30px 0
	.&-title
		font-family: GM
		font-size: 32px
		font-weight: 900
		margin-bottom 50px
		line-height: 1.3
		@media screen and (max-width 991px)
			font-size: 24px
			margin-bottom 0
		@media screen and (max-width 385px)
			font-size: 20px
	.&-text
		margin-bottom: 10px
		display block
		&-linked
			display inline-block
		@media screen and (max-width 991px)
			display block
		&:last-child
			margin-bottom: 0
		a
			display inline-block
			color #fff
			text-decoration none
			margin-right: 10px
			@media screen and (max-width 991px)
				margin-right: 0
			&:focus
				text-decoration none
				color #fff
			&:hover
				text-decoration underline
				color #fff
		&&-politics
			display block
			text-align right
			a
				margin-right: 0
			@media screen and (max-width 991px)
				text-align center
				margin-top: 10px
	@media screen and (max-width 991px)
		text-align center
.soc-links
	margin: 40px 0 70px
	text-align right
	@media screen and (max-width 991px)
		margin 40px auto
		text-align center
	@media screen and (max-width 560px)
		margin-bottom: 30px
.soc-link
	width 50px
	height: 50px
	border-radius: 50px
	text-align center
	margin 0 2px
	display inline-block
	background-image: url(../img/icons/soc-links.png)
	background-repeat: no-repeat
	text-decoration none
	transition: all .3s ease
	&:focus
		text-decoration none
	&:hover
		transform: translateY(-4px)
	&-vk
		background-position: 0 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(77, 118, 161, 0.79);
		background-color #4d76a1
	&-yt
		background-position: -50px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(255, 0, 0, 0.79);
		background-color #ff0000
	&-insta
		background-position: -100px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(240, 0, 117, 0.79);
		background-color #f00075
	&-tg
		background-position: -150px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(3, 155, 229, 0.79);
		background-color #039be5
	&-fb
		background-position: -200px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(59, 89, 152, 0.79);
		background-color #3b5998
	@media screen and (max-width 560px)
		margin 0 1px