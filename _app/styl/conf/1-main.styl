#main
	padding 0 0 60px
	min-height 100vh
	text-align center
	background-color: #A6D2E6
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	@media screen and (max-width 560px)
		padding 0 0 40px
.content
	position relative
	z-index 10
.main
	&-title
		font-size: 35px
		font-weight: 900
		text-transform uppercase
		margin-bottom: 30px
		@media screen and (max-width 991px)
			font-size: 30px
		@media screen and (max-width 560px)
			font-size: 26px
			margin-bottom: 20px
		@media screen and (max-width 385px)
			font-size: 24px
			margin-bottom: 15px
			line-height: 1.3
	&-subtitle
		font-size: 26px
		font-weight: bold
		text-transform uppercase
		margin: 20px 0
		@media screen and (max-width 991px)
			font-size: 24px
		@media screen and (max-width 560px)
			font-size: 18px
	&-subtitle-2
		font-size: 40px
		font-weight: 600
		color mBr
		@media screen and (max-width 991px)
			font-size: 36px
		@media screen and (max-width 560px)
			font-size: 30px
	&-text
		font-size: 22px
		span
			display inline-block
			color: mBr
			font-weight: 600
		@media screen and (max-width 991px)
			font-size: 20px
		@media screen and (max-width 385px)
			line-height: 1.3
	&-list
		width 100%
		margin 20px auto 30px
		&-item
			width 100%
			max-width 320px
			margin 0 auto
			border-radius: 40px;
			box-shadow: 0px 0px 47.79px 11.21px rgba(0, 0, 0, 0.12);
			background-color #298d60
			padding: 20px
			text-align center
			color: #fff
			min-height 182px
			&-icon
				width 50px
				height: 50px
				margin 0 auto 10px
				background-image: url(../img/icons/confirm.png)
				background-repeat: no-repeat
				&-1
					background-position: 0 0
				&-2
					background-position: -50px 0
				&-3
					background-position: -100px 0
			&-text
				@media screen and (max-width 1199px)
					br
						display none
		@media screen and (min-width 2295px)
			max-width 1000px
		@media screen and (max-width 991px)
			margin-bottom: 0
			&-item
				margin-bottom: 30px
				min-height 1px
.button-thanks
	display inline-block
	border-radius: 7px 35px;
	box-shadow: inset 0px 1px 0px 0px rgba(247, 243, 170, 0.04);
	padding 25px 35px
	background-color: #ffba00
	background-image: linear-gradient(to bottom, #fcdc6b,#ffba00)
	font-family: M
	transition: all .3s ease
	box-shadow: 0 4px 0 0 #d49c05, 0px 3px 4.25px 0.75px rgba(196, 145, 7, 0.4),inset 0px 1px 0px 0px rgba(247, 243, 170, 0.04);
	text-align center
	width 100%
	max-width 260px
	margin-bottom: 30px
	&:focus
		text-decoration none
		color #000
		background-color: #ffba00
		background-image: linear-gradient(to bottom, #fcdc6b,#ffba00)
	&:hover
		text-decoration none
		color #000
		background-color: #ffba00
		background-image: linear-gradient(to top, #fcdc6b,#ffba00)
		border-radius: 35px 7px
		transform: translateY(4px)
		box-shadow: 0 0 0 0 #d49c05, 0px 3px 2.25px 0.75px rgba(196, 145, 7, 0.4),inset 0px 1px 0px 0px rgba(247, 243, 170, 0.04);
	&-wrapper
		position relative
		&-center
			text-align center