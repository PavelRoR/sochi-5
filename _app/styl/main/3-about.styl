#about
	padding 90px 0
	background-image: url(../img/backs/clouds.png)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	position relative
	z-index 10
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
.balloon
	position absolute
	top 60px
	left -200px
	@media screen and (max-width 1199px)
		left -240px
	@media screen and (max-width 991px)
		left -260px
.birds
	position absolute
	bottom: 140px
	right -250px
.numbers-title
	font-size: 40px
	font-weight: 900
	margin-bottom 40px
	@media screen and (max-width 991px)
		font-size: 36px
		text-align center
		br
			display none
	@media screen and (max-width 560px)
		font-size: 28px
		margin-bottom 30px
	@media screen and (max-width 385px)
		font-size: 26px
.number
	border-radius: 40px;
	box-shadow: 0px 0px 47.79px 11.21px rgba(0, 0, 0, 0.12);
	width 100%
	max-width: 285px;
	margin 0 auto 20px
	background-color #298d60
	padding: 40px 20px
	text-align center
	color: #fff
	&-title
		font-family: AB
		font-size: 20px
		font-weight: bold
		text-transform uppercase
		margin-bottom 30px
		line-height: 1.4
		span
			font-size: 90px
			line-height: 60px
		@media screen and (max-width 1199px)
			span
				font-size: 75px
	&-text
		height: 135px;
		display: table-cell;
		vertical-align: middle;
		span
			font-weight: bold
		@media screen and (min-width 2295px)
			height 150px
		@media screen and (max-width 1199px)
			height 190px
		@media screen and (max-width 991px)
			height auto
			display block
.numbers
	&-img
		position relative
		padding-top: 100%
		img
			position absolute
			left 40px
			top -100px
			@media screen and (min-width 1900px)
				left 60px
		@media screen and (max-width 991px)
			margin-top: 180px
			img
				width 100%
				right -20px
				left auto
		@media screen and (max-width 385px)
			margin-top 140px
	&-cta
		position absolute
		bottom -250px
		left 0
		right 0
		margin 0 auto
		padding 15px 40px
		text-align center
		border-radius: 7px;
		box-shadow: 0px 0px 20.64px 3.36px rgba(0, 0, 0, 0.16);
		background-color: #298d60
		color #fff
		text-transform uppercase
		@media screen and (min-width 1900px)
			left 20px
		@media screen and (min-width 2295px)
			bottom -100px
		@media screen and (max-width 991px)
			bottom 0
		@media screen and (max-width 385px)
			padding 15px 20px
			bottom -100px
		&-title
			font-size: 24px
			font-weight: 900
			margin-bottom 20px
			@media screen and (max-width 385px)
				font-size: 20px
#plan
	padding 100px 0 0
	@media screen and (max-width 991px)
		padding 60px 0 0
	@media screen and (max-width 385px)
		padding 140px 0 0
.plan-title
	text-align center
	font-size: 40px
	font-weight: 900
	margin-bottom 50px
	@media screen and (max-width 560px)
		font-size: 32px
	@media screen and (max-width 385px)
		font-size: 26px
.lesson
	width 100%
	max-width 380px
	margin 0 auto 45px
	border-radius: 7px;
	box-shadow: 0px 1px 51.8px 18.2px rgba(125, 125, 127, 0.22);
	padding 90px 25px 50px
	background-color #fff
	position relative
	display table
	min-height 260px
	&:before
		content '+'
		display block
		position absolute
		border-radius: 50px
		font-size: 30px
		font-weight: 900
		line-height: 70px
		width 70px
		border-radius: 50px
		text-align center
		box-shadow: inset 0px 1px 0px 0px rgba(247, 243, 170, 0.04);
		background-color: #298d60
		left 0
		right 0
		margin 0 auto
		top -20px
		color #fff
	@media screen and (max-width 1199px)
		min-height 320px
	@media screen and (max-width 991px)
		min-height 1px
	@media screen and (max-width 560px)
		padding 60px 20px 50px
	&-text
		font-size: 20px
		text-transform uppercase
		text-align center
		display table-cell
		vertical-align middle
		@media screen and (max-width 560px)
			font-size: 18px
.plan-bq
	border-radius: 7px;
	box-shadow: 0px 0px 20.64px 3.36px rgba(0, 0, 0, 0.16);
	width 100%
	max-width: 900px;
	position relative
	margin 40px auto 0
	background-color: #298d60
	padding 30px 45px
	@media screen and (max-width 560px)
		padding 20px 30px
	&-img
		position absolute
		top -90px
		left -50px
		@media screen and (max-width 991px)
			left -100px
		@media screen and (max-width 560px)
			width: 100px;
			left: -44px;
			top: -29px;
		// @media screen and (max-width 385px)
		// 	left -160px
		// 	top -60px
	&-text
		color #fff
		text-transform uppercase
		font-size: 24px
		font-weight: 900
		text-align center
		@media screen and (max-width 560px)
			font-size: 20px
		@media screen and (max-width 385px)
			font-size: 18px