#author
	padding 100px 0
	background-image: url(../img/backs/author.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 385px)
		padding 60px 0 40px
.author-container
	position relative
	&-img
		position absolute
		top 70px
		right -230px
		z-index 20
.author-logo
	display block
	width 100%
	max-width 460px
	margin 0 0 30px auto
	position relative
	right -30px
	z-index 20
	@media screen and (max-width 991px)
		position: static
		margin 0 auto 30px
.author-img
	position relative
	z-index 10
	img
		position absolute
		top 0
		right 0
		@media (min-width 2295px)
			right 100px
		@media screen and (max-width 991px)
			position: static
			display block
			width 100%
			max-width 650px
			margin 30px auto 0
.author-title
	font-size: 40px
	font-weight: 900
	color #298d60
	margin-bottom 30px
	small
		display block
		color #000
		font-size: 21px
		font-weight: normal
		text-transform uppercase
	@media screen and (max-width 560px)
		font-size: 32px
		small
			font-size: 18px
	@media screen and (max-width 385px)
		font-size: 26px
		small
			font-size: 16px