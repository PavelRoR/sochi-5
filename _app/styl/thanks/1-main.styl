#main
	padding 0 0 60px
	min-height 100vh
	text-align center
	background-color: #A6D2E657
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	@media screen and (max-width 560px)
		padding 0 0 40px
.main
	&-title
		font-size: 35px
		font-weight: 900
		text-transform uppercase
		margin-bottom: 30px
		span
			display inline-block
			background-color: #E80F0F
			color #fff
			padding 5px 10px
			border-radius: 8px
		small
			display block
			font-size: 22px
			font-weight: bold
			margin-top: 20px
		@media screen and (max-width 991px)
			font-size: 28px
			small
				font-size: 19px
		@media screen and (max-width 560px)
			font-size: 24px
			margin-bottom: 20px
			small
				font-size: 16px
		@media screen and (max-width 385px)
			font-size: 22px
			margin-bottom: 15px
	&-img
		display block
		width 100%
		max-width 643px
		margin 0 auto
		@media screen and (max-width 991px)
			max-width 380px
		@media screen and (max-width 560px)
			max-width 250px
	&-subtitle
		font-family: GM
		font-size: 25px
		font-weight: bold
		text-transform uppercase
		margin-top: 20px
		@media screen and (max-width 991px)
			font-size: 22px
		@media screen and (max-width 560px)
			font-size: 18px
	&-text
		font-family: GM
		font-size: 20px
		margin 35px 0 30px
		text-transform uppercase
		@media screen and (max-width 991px)
			font-size: 18px
			margin 20px 0 15px
		@media screen and (max-width 560px)
			font-size: 16px
.button-thanks
	display inline-block
	border-radius: 7px 35px;
	box-shadow: inset 0px 1px 0px 0px rgba(247, 243, 170, 0.04);
	padding 25px 35px
	background-color: #ffba00
	background-image: linear-gradient(to bottom, #fcdc6b,#ffba00)
	font-family: M
	transition: all .3s ease
	box-shadow: 0 4px 0 0 #d49c05, 0px 3px 4.25px 0.75px rgba(196, 145, 7, 0.4),inset 0px 1px 0px 0px rgba(247, 243, 170, 0.04);
	text-align center
	width 100%
	max-width 260px
	&:focus
		text-decoration none
		color #000
		background-color: #ffba00
		background-image: linear-gradient(to bottom, #fcdc6b,#ffba00)
	&:hover
		text-decoration none
		color #000
		background-color: #ffba00
		background-image: linear-gradient(to top, #fcdc6b,#ffba00)
		border-radius: 35px 7px
		transform: translateY(4px)
		box-shadow: 0 0 0 0 #d49c05, 0px 3px 2.25px 0.75px rgba(196, 145, 7, 0.4),inset 0px 1px 0px 0px rgba(247, 243, 170, 0.04);
	&-wrapper
		position relative
		&-center
			text-align center