section#video
	.container
		.row
			.col-md-6.col-md-push-6
				.video-container
					p.video-container-text ПОСМОТРИТЕ ВИДЕО
					+imgs('video-container-img', 'img/images/ball.png', 'Мяч')
					.video-wrapper
						+imgs('video-wrapper-laptop', 'img/images/laptop-video.png', 'Ноутбук')
						iframe(src='https://www.youtube.com/embed/qPoL4osJtvs?modestbranding=0' allowfullscreen)
			.col-md-6.col-md-pull-6
				.form-container
					+imgs('form-container-img form-container-img-1', 'img/images/tube.png', 'Рупор')
					+imgs('form-container-img form-container-img-2', 'img/images/stars.png', 'Морские звезды')
					+imgs('form-container-img form-container-img-3', 'img/images/glasses.png', 'Очки')
					form(action=action+group method="post" enctype="application/x-www-form-urlencoded" accept-charset="UTF-8" target=form_target).form.form-1
						h3.form-title СПЕШИТЕ ЗАПИСАТЬСЯ
